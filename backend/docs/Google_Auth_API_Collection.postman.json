{
	"info": {
		"name": "Wardrobe AI - Google Authentication API",
		"description": "API collection for testing Google OAuth2 authentication flow",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{jwt_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3001/api",
			"type": "string"
		},
		{
			"key": "jwt_token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "1. Get Google OAuth URL",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/auth/google",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"google"
							]
						}
					},
					"response": []
				},
				{
					"name": "2. Google OAuth Callback",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/auth/google/callback?code=AUTHORIZATION_CODE&state=STATE",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"google",
								"callback"
							],
							"query": [
								{
									"key": "code",
									"value": "AUTHORIZATION_CODE",
									"description": "Authorization code from Google"
								},
								{
									"key": "state",
									"value": "STATE",
									"description": "State parameter for security"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "3. Verify Google ID Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"idToken\": \"GOOGLE_ID_TOKEN_HERE\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/google/verify",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"google",
								"verify"
							]
						}
					},
					"response": []
				},
				{
					"name": "4. Regular Login (for comparison)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"emailOrUsername\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"login"
							]
						}
					},
					"response": []
				},
				{
					"name": "5. Register New User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"newuser@example.com\",\n  \"username\": \"newuser123\",\n  \"password\": \"securepassword\",\n  \"displayName\": \"New User\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"register"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Protected Routes (Require JWT)",
			"item": [
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/users/me",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"users",
								"me"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get User Avatars",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/avatars",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"avatars"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Health Check",
			"item": [
				{
					"name": "Server Health",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:3001/health",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3001",
							"path": [
								"health"
							]
						}
					},
					"response": []
				}
			]
		}
	]
}
